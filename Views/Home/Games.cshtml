
@{
    ViewData["Title"] = "Games";
}

<h1>Game Tools</h1>

<div class="col-lg-12">
    <h2>Create</h2>
    <div class="row col-sm-6">
        <a class="btn btn-sm btn-success" asp-controller="Games" asp-action="Create">Create Game</a>
        <a class="btn btn-sm btn-success" asp-controller="GameCategories" asp-action="Create">Create Game Category</a>
        <a class="btn btn-sm btn-success" asp-controller="GameStatus" asp-action="Create">Create Game Status</a>
    </div>
</div>

<div class="col-lg-12">
    <h2>List</h2>
    <div class="row col-sm-6">
        <a class="btn btn-sm btn-success" asp-controller="Games" asp-action="Index">List all Games</a>
        <a class="btn btn-sm btn-success" asp-controller="GameCategories" asp-action="Index">List all Game Categories</a>
        <a class="btn btn-sm btn-success" asp-controller="GameStatus" asp-action="Index">List all Game Status</a>
    </div>
</div>